{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "composite": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@mocks/*": ["src/testUtils/mocks/*"]
    }
  },
  "include": ["vite.config.ts"]
}
